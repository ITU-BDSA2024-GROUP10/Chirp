@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @await Component.InvokeAsync("SubmitCheep", new { Model.MessageModel, targetPage = "/"})
    
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @DateTimeOffset.FromUnixTimeSeconds(cheep.UnixTimestamp).DateTime.ToString("dd/MM/yy H:mm:ss")</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    <div>
        @if (Model.PageNumber > 1)
        {
        <a href="/?page=@(Model.PageNumber - 1)">Previous</a>
        }
        <p>@Model.PageNumber</p>
        @if (Model.Cheeps.Count > 31)
        {
        <a href="/?page=@(Model.PageNumber + 1)">Next</a>
        }
    </div>
</div>
